<p id="notice">
	<%= notice %>
</p>

<h1>Prizes</h1>

<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Code</th>
					<th>Name</th>					
					<th>Description</th>
					<th>Sponsor</th>					
					<th>Price</th>
					<th>Match</th>
					<th>Images</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @prizes.each do |prize| %>
				<tr>
					<td><%= prize.code %></td>
					<td><%= prize.name %></td>					
					<td><%= prize.description %></td>
					<td><%= prize.sponsor %></td>
					<td><%= prize.price %></td>
					<td><%= prize.match.nil? ? nil:display_match_description(prize.match) %></td>
					<td><%= display_prize(prize) %></td>														
					<td> 
						<%= link_to 'Show', prize, :class => 'btn btn-default'%>
						<%= link_to 'Edit', edit_prize_path(prize) , :class => 'btn btn-default'%>
						<%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%> 
					</td>
					
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to 'New Prize', new_prize_path , :class => 'btn btn-primary' %>
	</div>
</div>

