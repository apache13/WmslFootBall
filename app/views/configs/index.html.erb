<p id="notice">
	<%= notice %>
</p>

<h1>Configs</h1>

<%= render 'search' %>

<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Key</th>
					<th>Value</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @configs.each do |config| %>
				<tr>
					<td><%= config.key %></td>
					<td><%= config.value %></td>					
					<td> <%= link_to 'Show', config , :class => 'btn btn-default'%>
					<%= link_to 'Edit', edit_config_path(config) , :class => 'btn btn-default'%>
					<%= link_to 'Destroy', config, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%> </td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= will_paginate @configs %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to 'New Config', new_config_path , :class => 'btn btn-primary' %>
	</div>
</div>
