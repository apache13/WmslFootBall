<script>
	$(document).ready(function() {
		$('.flexslider').flexslider();
	}); 
</script>
<style>
	.flexslider .slides img {
		width: 960px;
		height: 540px;				
		margin: 0 auto;
	}
</style>
<div class="row">
	<div class="col-md-12">
		<div class="flexslider">
			<ul class="slides">
				<% @images.each do |image| %>
					<li>
						<%= image_tag image.strip, :class=> "img-rounded center-block" %>
					</li>
				<% end %>								
			</ul>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-2 center-block" style="float:none">
		<%= link_to signin_facebook_path do %>
		<div class="btn btn-social btn-facebook">
			<i class="fa fa-facebook"></i> Sign in with Facebook
		</div>
		<% end %>
	</div>
</div>

