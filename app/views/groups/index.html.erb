<p id="notice">
	<%= notice %>
</p>

<h1>Groups</h1>

<%= render 'search' %>

</style>
<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Teams</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @groups.each do |group| %>
				<tr>
					<td><%= group.name %></td>
					<td>
						<ul class="flag-horizontal">
						<% group.teams.each do |team| %>
							<li><%= display_team(team) %></li>
						<% end %>
						</ul>
					</td>
					<td> <%= link_to 'Show', group , :class => 'btn btn-default'%>
					<%= link_to 'Edit', edit_group_path(group) , :class => 'btn btn-default'%>
					<%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%> </td>

				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= will_paginate @groups %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to 'New Group', new_group_path , :class => 'btn btn-primary' %>
	</div>
</div>
