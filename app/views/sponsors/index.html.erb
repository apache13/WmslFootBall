<p id="notice">
	<%= notice %>
</p>

<h1>Sponsors</h1>

<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Code</th>
					<th>Name</th>
					<th>Url</th>
					<th>Enable</th>
					<th>Start</th>
					<th>End</th>
					<th>Image</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @sponsors.each do |sponsor| %>
				<tr>
					<td><%= sponsor.code %></td>
					<td><%= sponsor.name %></td>
					<td><%= sponsor.url %></td>
					<td><%= sponsor.enable %></td>
					<td><%= sponsor.start %></td>
					<td><%= sponsor.end %></td>
					<td><%= sponsor.images.blank? %></td>									
					<td> 
						<%= link_to 'Show', sponsor, :class => 'btn btn-default'%>
						<%= link_to 'Edit', edit_sponsor_path(sponsor) , :class => 'btn btn-default'%>
						<%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%> 
					</td>
					
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to 'New Sponsor', new_sponsor_path , :class => 'btn btn-primary'%>
	</div>
</div>


