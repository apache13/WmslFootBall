<table class="table table-hover">
	<thead>
		<tr>
			<th>Rank</th>
			<th>Player</th>
			<th>PTS</th>
		</tr>
	</thead>
	<tbody>
		<% @table.each_with_index do |user,index| %>
		<tr>
			<td><%= index+1 %></td>
			<td><%= display_user(user) %></td>
			<td><%= user.pts %></td>
		</tr>
		<% end %>
	</tbody>
</table>