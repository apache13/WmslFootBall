<table class="table table-hover">
	<thead>
		<tr>
			<th>Match</th>
			<th>Stage</th>
			<th>Start</th>
			<th>Match</th>
			<th>Result</th>
			<th>Your Bet</th>
			<th>Win?</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
		<% @matches.each_with_index do |match,index| %>
		<tr class=<%= match.lock? ? ("danger") : ("success") %> >
			<td><%= index+1 %></td>
			<td><%= match.description %></td>
			<td><%= match.start %></td>
			<td><%= display_match(match) %></td>
			<td><%= display_match_result(match) %></td>
			<td><%= display_bet(Bet.find_by(match: match,user: session[:user_id])) %></td>
			<td><%= display_bet_result(Bet.find_by(match: match,user: session[:user_id])) %></td>
			<td><%= link_to "Bet", new_bet_path(:match_id=>match.id), :id => "bet-#{index+1}", :countdown=>match.start, :class=>'btn' %>
			<script>
				var startMatchDateTime = new Date($("#bet-<%= index+1 %>").attr("countdown"));
				function expiry() {
					$("#bet-<%= index+1 %>").prop("disabled", true)
				}
				$("#bet-<%= index+1 %>").countdown({
					until : startMatchDateTime,
					onExpiry : expiry,
					layout: '{dnn} {dl}, {hnn} {hl}, {mnn} {ml}, {snn} {sl}'
				});
			</script></td>
		</tr>
		<% end %>
	</tbody>
</table>