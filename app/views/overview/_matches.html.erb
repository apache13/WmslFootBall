<table class="table table-hover">
	<thead>
		<tr>
			<th>Match</th>
			<th>Stage</th>
			<th>Start</th>
			<th>Match</th>
			<th>Result</th>
			<th>Bet</th>
		</tr>
	</thead>

	<tbody>
		<% @matches.each_with_index do |match,index| %>
		<tr class=<%= match.lock? ? ("danger") : ("success") %> >
			<td><%= index+1 %></td>
			<td><%= match.description %></td>
			<td><%= match.start %></td>
			<td><%= display_match(match) %></td>
			<td><%= display_match_result(match) %></td>
			<td><%= link_to "Bet", root_path, :id => "bet-#{index+1}", :countdown=>match.start, :class=>'btn' %>
			<script>
				var startMatchDateTime = new Date($("#bet-<%= index+1 %>").attr("countdown"));
				function expiry() {
					$("#bet-<%= index+1 %>").prop("disabled", true)
				}
				$("#bet-<%= index+1 %>").countdown({
					until : startMatchDateTime,
					onExpiry : expiry,
					layout: '{dn} {dl}, {hn} {hl}, {mn} {ml}, {sn} {sl}'
				});
			</script></td>
		</tr>
		<% end %>
	</tbody>
</table>