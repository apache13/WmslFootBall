<p id="notice">
	<%= notice %>
</p>

<h1>Users</h1>

<%= render 'search' %>

<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Provider</th>
					<th>Avatar</th>
					<th>Uid</th>
					<th>Name</th>
					<th>Email</th>
					<th>Admin</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.provider %></td>
					<td><%= user_image_tag(user) %></td>
					<td><%= user.uid %></td>
					<td><%= user.name %></td>
					<td><%= user.email %></td>
					<td><%= user.admin %></td>					
					<td> <%= link_to 'Show', user , :class => 'btn btn-default'%>
					<%= link_to 'Edit', edit_user_path(user) , :class => 'btn btn-default'%>
					<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%> </td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= will_paginate @users %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to 'New User', new_user_path , :class => 'btn btn-primary' %>
	</div>
</div>
