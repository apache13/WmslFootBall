<p id="notice">
	<%= notice %>
</p>

<h1>Teams</h1>

<%= render 'search' %>

<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Group</th>
					<th>Name</th>
					<th>ISO Code (2 Digit)</th>
					<th>Flag</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @teams.each do |team| %>
				<tr>
					<td><%= team.group.name %></td>
					<td><%= team.name %></td>
					<td><%= team.code %></td>					
					<td><%= display_team(team) %></td>
					<td> <%= link_to 'Show', team , :class => 'btn btn-default'%>
					<%= link_to 'Edit', edit_team_path(team) , :class => 'btn btn-default'%>
					<%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%> </td>

				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= will_paginate @teams %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to 'New Team', new_team_path , :class => 'btn btn-primary' %>
	</div>
</div>