<%= form_tag(teams_path, method: "get") do |form| %>

<div class="row">
	<div class="col-md-4">
		<div class="form-group">
			<%= label_tag(:name) %>
			<%= text_field_tag(:name,nil,:class=>'form-control') %>
		</div>
	</div>
	<div class="col-md-4">
		<div class="form-group">
			<%= label_tag(:code) %>
			<%= text_field_tag(:code,nil, :class=>'form-control') %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-4">
		<div class="actions">
			<%= submit_tag("Search", :class=>'btn btn-default') %>
			<%= submit_tag("Clear", :class=>'btn btn-default',:type => "reset") %>
		</div>
	</div>
</div>

<% end %>